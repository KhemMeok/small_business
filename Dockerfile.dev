# Use Node.js LTS Alpine as the base image
FROM node:lts-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json (or yarn.lock)
COPY package*.json ./

RUN npm config set proxy http://192.168.1.10:3128
RUN npm config set https-proxy http://192.168.1.10:3128

# Install dependencies
RUN npm install

# Install Vue CLI globally (if using Vue CLI)
RUN npm install -g @vue/cli

# Copy the rest of the project files
COPY . .

# Expose port 8080 (default for Vue CLI)
EXPOSE 1818

# Start the Vue development server
CMD ["npm", "run", "dev"]
